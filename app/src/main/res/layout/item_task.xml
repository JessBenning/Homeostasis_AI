<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <!-- FrameLayout to allow layering of actions and content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Background Actions Container (Edit/Delete) -->
        <!-- This view will be revealed when the foreground content slides -->
        <LinearLayout
            android:id="@+id/task_actions_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium">


            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_small"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_edit_task"
                android:padding="@dimen/spacing_small"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_delete_task"
                android:padding="@dimen/spacing_small"
                android:src="@android:drawable/ic_menu_delete" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorBackgroundFloating"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/spacing_medium">

            <TextView
                android:id="@+id/completion_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_completion_counter"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/task_options_menu"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="2"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/task_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Homeostasis.Headline3"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Clean the kitchen" />

            <TextView
                android:id="@+id/task_last_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textAppearance="@style/TextAppearance.Homeostasis.Caption"
                android:textStyle="italic"
                app:layout_constraintEnd_toStartOf="@+id/task_options_menu"
                app:layout_constraintTop_toBottomOf="@+id/task_title"
                tools:text="Last done: Yesterday by John" />

            <TextView
                android:id="@+id/task_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/holo_green_light"
                android:paddingStart="@dimen/spacing_small"
                android:paddingTop="2dp"
                android:paddingEnd="@dimen/spacing_small"
                android:paddingBottom="2dp"
                android:textAppearance="@style/TextAppearance.Homeostasis.Caption"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/task_title"
                tools:text="10 pts" />

            <ImageButton
                android:id="@+id/task_options_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Task Options"
                android:src="@drawable/ic_overflow_menu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/task_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/holo_blue_light"
                android:paddingStart="@dimen/spacing_small"
                android:paddingTop="2dp"
                android:paddingEnd="@dimen/spacing_small"
                android:paddingBottom="2dp"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@+id/task_points"
                app:layout_constraintTop_toBottomOf="@+id/task_title"
                tools:text="Household" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Foreground Content Container (Your original ConstraintLayout) -->
        <!-- This view will slide to reveal the actions -->
        <!--        /* Or ?android:attr/windowBackground if bg_task_item is transparent */-->

<!--        /* To intercept clicks if needed when actions are shown */-->


        <!--    </androidx.constraintlayout.widget.ConstraintLayout>-->

    </FrameLayout>
</com.google.android.material.card.MaterialCardView>






